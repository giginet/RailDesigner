<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/followItemContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/kamcordFollowListPadding"
        android:layout_marginRight="@dimen/kamcordFollowListPadding"
        android:layout_marginTop="@dimen/kamcordFollowListPadding"
        android:background="#fff"
        android:padding="8dp" >
        
        <TextView
            android:id="@+id/profileLetter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/kamcord_profile_letter_background"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <com.kamcord.android.ui.views.FollowUnfollowButton
            android:id="@+id/followUnfollow"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/kamcord_like_button_background"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/kamcord_like_button_text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileLetter"
            android:layout_alignParentTop="true"
            android:textColor="@color/kamcordFollowListUsername"
            android:textSize="@dimen/kamcordFollowListUsername" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileLetter"
            android:layout_alignParentBottom="true"
            android:textColor="@color/kamcordFollowListFollowingCount"
            android:textSize="@dimen/kamcordFollowListFollowingCount" />
    </RelativeLayout>

</LinearLayout>