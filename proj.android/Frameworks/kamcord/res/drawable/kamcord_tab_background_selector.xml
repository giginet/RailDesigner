<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#3000"
                        android:endColor="#0000"
                        android:angle="90" />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="-4dp" android:right="-4dp" android:top="-4dp">
                <shape android:shape="rectangle">
                    <stroke android:width="3dp"
                        android:color="@color/kamcordButtonActive" />
                    <solid android:color="@null" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@null" />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="-4dp" android:right="-4dp" android:top="-4dp">
                <shape android:shape="rectangle">
                    <stroke android:width="3dp"
                        android:color="@color/kamcordButtonActive" />
                    <solid android:color="@null" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#3000"
                android:endColor="#0000"
                android:angle="90" />
        </shape>
    </item>
    <item android:drawable="@color/kamcordTabItemUnfocusColor"></item>

</selector>